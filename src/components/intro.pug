mixin intro()
    section.intro   
        .intro__body.container 
            .intro__content 
                p.intro__desc Детектор возраста
                h1.intro__title На сколько лет ты выглядишь?
                p.intro__p Приложение "Мой возраст"
                .intro__img.enable-lg 
                    img(src="@img/intro-phone.png", alt="" draggable="false" loading="lazy")
                .intro__links 
                    a(href="https://apps.apple.com/ru/app/%D0%BC%D0%BE%D0%B9-%D0%B2%D0%BE%D0%B7%D1%80%D0%B0%D1%81%D1%82/id1483210140" target="_blank" rel="noreferrer").intro__link 
                        img(src="@img/intro-appstore.png", alt="" draggable="false" loading="lazy") 
                    a(href="https://play.google.com/store/apps/details?id=net.ageapp.application" target="_blank" rel="noreferrer").intro__link 
                        img(src="@img/intro-googleplay.png", alt="" draggable="false" loading="lazy") 
                a(href="https://ageapp.net/download/ageapp-net.apk" target="_blank" rel="noreferrer").intro__btn Скачать apk для android, huawei
