                        img(src="@img/intro-icon-1.svg", alt="" draggable="false" loading="lazy")
                    a(href="https://connect.ok.ru/oauth/authorize?client_id=1248368128&scope=VALUABLE_ACCESS;GET_EMAIL&response_type=code&layout=a&redirect_uri=https://ageapp.net/user/odnoklassniki" target="_blank" rel="noreferrer").intro__site 
